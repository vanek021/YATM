@using YATM.BlazorModels.Boards;

@inject DatabaseFactory dbFactory

<Modal Visible="visible" Closable="false" Centered="true" OnOk="OnOK" OnCancel="OnCancel" Title="@Task.Name">

</Modal>

@code {
    [Parameter]
    public BoardTaskBlazorModel? Task { get; set; }

    private bool visible = false;

    public void OpenModal()
    {
        visible = true;

        StateHasChanged();
    }

    private void OnOK()
    {
        visible = false;
    }

    private void OnCancel()
    {
        visible = false;
    }
}
